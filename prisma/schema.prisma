generator client {
  provider = "prisma-client-js"
}

generator pothos {
  provider = "prisma-pothos-types"
}

datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

model User {
  id    Int        @id @default(autoincrement())
  email String     @unique
  name  String?
  lists TodoList[]
  password String @default("password")
  authScope AuthScope @default(PLAINUSER)
}

enum AuthScope {
  SUPERUSER
  PLAINUSER
}

model TodoList {
  id        Int    @id @default(autoincrement())
  name      String
  userEmail String
  tasks     Task[]
  user User @relation(fields: [userEmail], references: [email], onDelete: Cascade, onUpdate: Cascade)
}

model Task {
  id              Int      @id @default(autoincrement())
  name            String
  minutesEstimate Float?
  listId          Int
  list TodoList @relation(fields: [listId], references: [id], onDelete: Cascade, onUpdate: Cascade)
}

model UserActionsLog {
  id        Int        @id @default(autoincrement())
  createdAt DateTime   @default(now())
  action    UserAction
  email     String
}

enum UserAction {
  CREATED
  DELETED
}
